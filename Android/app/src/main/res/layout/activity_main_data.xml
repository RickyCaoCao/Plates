<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/main_data"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enghack2018.Activities.MainDataActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="30">

        <android.support.design.widget.TabLayout
            android:id="@+id/mainDataTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/colorBlue"
            app:tabSelectedTextColor="@color/colorBlue"
            app:tabTextColor="@color/colorGray" />

        <ImageView
            android:background="@drawable/bottom_gradient_shadow"
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <com.enghack2018.View.SecondaryViews.NonSwipeableViewPager
            android:id="@+id/mainDataViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">


        </com.enghack2018.View.SecondaryViews.NonSwipeableViewPager>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
